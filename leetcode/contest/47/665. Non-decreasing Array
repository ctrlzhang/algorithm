class Solution {
public:
    bool checkPossibility(vector<int>& nums) {
        int n = nums.size();
        if(n <= 2) return true;
        
        int cnt = 0;
        if(nums[0] > nums[1]) {
            cnt = 1;
            nums[0] = nums[1];
        }
        
        for(int i = 1; i < n - 1; i++) {
            if(nums[i] > nums[i + 1]) {
                cnt++;
                if(cnt >= 2) return false;
                if(nums[i + 1] <= nums[i - 1]) {
                    nums[i + 1] = nums[i];
                } else {
                    nums[i] = nums[i - 1];
                }
            }
        }
        
        return true;
    }
};
