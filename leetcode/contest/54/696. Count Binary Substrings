class Solution {
public:
    int countBinarySubstrings(string s) {
        int l = s.length();
        string tmp = "";
        int ans = 0;
        for(int i = 1; i < l; i++) {
            int j = i;
            int cnt = 0;
            while(j > 0 && s[j] == s[i]) {
                j--;
                cnt++;
            }
            
            if(j >= 0) {
                while(j >= 0 && s[j] != s[i]) {
                    j--;
                    cnt--;
                    if(0 == cnt) {
                        ans++;
                        break;
                    }
                }
            }
        }
        
        return ans;
    }
};
