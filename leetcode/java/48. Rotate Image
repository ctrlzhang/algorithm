class Solution {
    public void rotate(int[][] matrix) {
        int row = matrix.length;
        int col = matrix[0].length;
        
        // 
        for (int i = 0; i < row; i++) {
            for (int j = i + 1; j < col; j++) {
                int tmp = matrix[i][j];
                matrix[i][j] = matrix[j][i];
                matrix[j][i] = tmp;
            }
        }
        
        // left to right
        int left = 0, right = col - 1;
        while (left < right) {
            for (int i = 0; i < row; i++) {
                int tmp = matrix[i][left];
                matrix[i][left] = matrix[i][right];
                matrix[i][right] = tmp;
            }
            
            ++left;
            --right;
        }
    }
}
