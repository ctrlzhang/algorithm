class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        int r = matrix.size();
        if(0 == r) return false;
        
        int c = matrix[0].size();
        if(0 == c) return false;
        
        int i;
        for(i=0; i<r; i++) {
            if(matrix[i][c-1] == target) return true;
            if(matrix[i][c-1] > target) break;
        }

        if(i == r) return false;
        
        return bs(matrix[i], target);
    }
    
    bool bs(vector<int> nums, int target) {
        int i=0;
        int j=nums.size() -1;
        while(i <= j) {
            int mid = (i+j)/2;
            if(target == nums[mid]) return true;
            if(target < nums[mid]) {
                j = mid - 1;
            } else {
                i = mid + 1;
            }
        }
        
        return false;
    }
    
};
