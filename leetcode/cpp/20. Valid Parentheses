class Solution {
public:
    bool isValid(string s) {
        stack<char> st;
        map<char, char> mc;
        mc['('] = ')';
        mc['['] = ']';
        mc['{'] = '}';
        
        for(int i=0; i<s.size(); i++) {
            switch(s[i]) {
                case '(':
                case '[':
                case '{':
                    {
                        st.push(s[i]);
                        break;
                    }
                case ')':
                case ']':
                case '}':
                    {
                        if(st.empty()) return false;
                        char top = st.top();
                        if(mc[top] == s[i]) {
                            st.pop();
                        } else {
                            return false;
                        }
                        break;
                    }
                default:
                    return false;
            }
        }
        
        if(st.empty()) return true;
        return false;
    }
};
